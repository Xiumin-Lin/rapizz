<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <children>
      <HBox alignment="CENTER" prefHeight="50.0">
         <children>
            <Label fx:id="label_title" text="RaPizz">
               <font>
                  <Font name="Segoe UI Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <SplitPane dividerPositions="0.08758700696055685" orientation="VERTICAL" prefHeight="600.0">
        <items>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                <Button fx:id="btn_menu" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="125.0" text="Menu" />
                  <Button fx:id="btn_delivery" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="125.0" text="Livraison" />
                  <Button fx:id="btn_stats" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="125.0" text="Statistiques" />
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Label fx:id="label_connection_state" text="Connexion ?">
                     <font>
                        <Font name="Segoe UI Italic" size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </HBox>
          <AnchorPane fx:id="main_view" minHeight="0.0" minWidth="0.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </AnchorPane>
        </items>
      </SplitPane>
  </children>
</VBox>
